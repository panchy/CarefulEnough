<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    tools:context="panch.com.carefulenough.pages.GameOver.GameOverActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="GAME\nOVER"
            android:textColor="@color/colorAccent"
            android:textSize="64sp"
            app:typeface="roboto_thin" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Score: "
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            app:typeface="roboto_thin" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_mainmenu"
            android:layout_marginTop="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textSize="56sp"
            android:textStyle="bold"
            fancy:fb_borderColor="#ffffff"
            fancy:fb_borderWidth="4dp"
            fancy:fb_defaultColor="#00000000"
            fancy:fb_focusColor="#11ff00"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="20dp"
            fancy:fb_text="MAIN MENU"
            fancy:fb_textColor="#ffffff" />
    </LinearLayout>


</FrameLayout>
